<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="720" prefWidth="1280" stylesheets="@../css/document_manager-view.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="be.esi.prj.easyeval.fxmlcontroller.DocumentManagerController">
    <top>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack" text="â† Back to Courses"/>
                <Label fx:id="courseNameLabel" styleClass="header-title" text="Course Name - Exams">
                    <font>
                        <Font name="System Bold" size="20.0"/>
                    </font>
                </Label>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
                <TextField fx:id="searchField" promptText="Search exams..." HBox.hgrow="ALWAYS"/>
                <Button mnemonicParsing="false" onAction="#handleSearch" text="Search"/>
                <Button mnemonicParsing="false" onAction="#handleClearSearch" text="Clear"/>
            </HBox>
        </VBox>
    </top>
    <center>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="10.0"/>
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label text="Available Exams:" HBox.hgrow="ALWAYS">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>

                <Button fx:id="addExamButton" mnemonicParsing="false" onAction="#handleAddExam" styleClass="button-primary" text="Create New Exam"/>
            </HBox>
            <GridPane fx:id="examsGrid" hgap="15.0" vgap="15.0" VBox.vgrow="ALWAYS">
                <!-- Exam cards will be added here dynamically -->
            </GridPane>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" styleClass="footer" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
            </padding>
            <Label text="easyEval v1.0" textFill="#6e6e6e"/>
        </HBox>
    </bottom>
</BorderPane>