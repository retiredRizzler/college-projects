<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="720" prefWidth="1280" stylesheets="@../css/document_creator-view.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="be.esi.prj.easyeval.fxmlcontroller.DocumentCreatorController">
    <top>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack" text="← Back to Exams"/>
                <Label styleClass="header-title" text="easyEval">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Label>
                <Label styleClass="header-subtitle" text="Exam Editor">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <Pane HBox.hgrow="ALWAYS" />
            </HBox>
        </VBox>
    </top>
    <center>
        <SplitPane dividerPositions="0.4" BorderPane.alignment="CENTER">
            <VBox spacing="10.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label text="Exam Properties">
                        <font>
                            <Font name="System Bold" size="14.0"/>
                        </font>
                    </Label>
                </HBox>

                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="250.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <Label text="Title:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="titleField" promptText="Enter exam title" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    <Label text="Instructions:" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.valignment="TOP" />
                    <TextArea fx:id="instructionsArea" promptText="Enter exam instructions (optional)" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                </GridPane>

                <Separator />

                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label text="Question Form">
                        <font>
                            <Font name="System Bold" size="14.0"/>
                        </font>
                    </Label>
                </HBox>

                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="250.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <Label text="Question:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="questionField" promptText="Enter question text" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    <Label text="Answer:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="answerField" promptText="Enter correct answer" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                </GridPane>

                <HBox alignment="CENTER" spacing="10.0">
                    <Button fx:id="addQuestionBtn" mnemonicParsing="false" onAction="#handleAddQuestion" styleClass="button-primary" text="Add Question" />
                    <Button fx:id="updateQuestionBtn" mnemonicParsing="false" onAction="#handleUpdateQuestion" styleClass="button-primary" text="Update Question" disable="true" />
                    <Button fx:id="clearFormBtn" mnemonicParsing="false" onAction="#handleClearForm" text="Clear Form" />
                </HBox>

                <Separator />

                <HBox alignment="CENTER" spacing="10.0">
                    <Button fx:id="saveExamBtn" mnemonicParsing="false" onAction="#handleSaveExam" styleClass="button-success" text="Save Exam" />
                </HBox>
            </VBox>

            <VBox spacing="10.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label text="Questions List">
                        <font>
                            <Font name="System Bold" size="14.0"/>
                        </font>
                    </Label>
                    <Pane HBox.hgrow="ALWAYS" />
                    <Label fx:id="questionCountLabel" text="0 questions" />
                </HBox>

                <TableView fx:id="questionsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="questionTextColumn" prefWidth="350.0" text="Question" />
                        <TableColumn fx:id="answerColumn" prefWidth="150.0" text="Answer" />
                    </columns>
                    <placeholder>
                        <Label text="No questions added yet. Use the form on the left to add questions." />
                    </placeholder>
                </TableView>

                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <Button fx:id="editQuestionBtn" mnemonicParsing="false" onAction="#handleEditQuestion" styleClass="button-primary" text="Edit Selected" />
                    <Button fx:id="removeQuestionBtn" mnemonicParsing="false" onAction="#handleRemoveQuestion" styleClass="button-danger" text="Remove Selected" />
                </HBox>
            </VBox>
        </SplitPane>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" styleClass="footer" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
            </padding>
            <Label text="easyEval v1.0" textFill="#6e6e6e"/>
        </HBox>
    </bottom>
</BorderPane>